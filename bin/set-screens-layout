#!/bin/sh
xrandr --output DP-0 --scale 1.5x1.5 --pos -3840x300 --rotate left

sleep 5

xrandr --output HDMI-0 --primary --mode 3840x2160 --pos 1620x50 --rotate normal --output DP-0 --mode 1920x1080 --pos 0x0 --rotate left --output DP-1 --off --output eDP-1-1 --off --output DP-1-1 --off --output HDMI-1-1 --off --output DP-1-2 --off --output HDMI-1-2 --off

sleep 5

~/bin/position-sticky-notes
