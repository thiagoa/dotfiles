#!/bin/sh

xinput set-prop $(xinput list --id-only 'pointer:Logitech MX Ergo') "libinput Button Scrolling Button" 3
xinput set-prop $(xinput list --id-only 'pointer:Logitech MX Ergo') "libinput Scroll Method Enabled" 0, 0, 1
xinput set-prop $(xinput list --id-only 'pointer:Logitech MX Ergo') 'libinput Accel Profile Enabled' 1, 0
xinput set-prop $(xinput list --id-only 'pointer:Logitech MX Ergo') 'libinput Accel Speed' 0.091471
