[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace = cr-at-eol
    filemode = false
	autocrlf = input
[user]
	name = Thiago A. Silva
	email = thiagoaraujos@gmail.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
[alias]
    aa = add .
    ap = add --patch
	co = checkout
	br = branch
	ci = commit
	st = status -sb
    p = push
	au = update-index --assume-unchanged
	s = submodule update --init
	ss = submodule sync
    f = fetch
    reb = rebase
    rebc = rebase --continue
    cia = commit --amend
	ciane = commit --amend --no-edit
	cianec = !git commit --amend --no-edit && git rebase --continue
    diffc = diff --cached
    diffw = diff --word-diff
	unstage = reset HEAD --
    la = log --oneline --graph --decorate --all
    l = log --oneline --graph --decorate
    ls = "log --pretty=format:\"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn] %C(yellow)%ar\" --decorate --date=short"
    lsv = "log --pretty=format:\"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]\" --decorate --date=short --numstat"
    home = rev-parse --show-toplevel
    restore = !git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"
    reapplytag = !git tag -d $1 && git push origin :refs/tags/$1 && git tag $1 && git push origin master && git push --tags
    applytag = !git tag $1 && git push origin master && git push --tags
    list-files = diff-tree --no-commit-id --diff-filter=ACMRTUXB --name-only -r
    last-files = !git list-files HEAD
	ctags = !.git/hooks/ctags\n
	glog = log -E -i --grep
    mup = !git checkout master && git pull && git checkout -
	first-commit = !git log master..HEAD --oneline | tail -1 | cut -d' ' -f 1
    branch-files = !git list-files $(git first-commit)..HEAD
	type = cat-file -t
	dump = cat-file -p
[push]
	default = upstream
[fetch]
    prune = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[github]
	token = 990b2fbb1bdf056797dceda60264018f
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[mergetool]
	keepBackup = true
	prompt = false
[auto]
	crlf = input
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = Kaleidoscope
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[init]
	templatedir = ~/.git_template
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[help]
	autocorrect = 1
[pull]
	rebase = true
